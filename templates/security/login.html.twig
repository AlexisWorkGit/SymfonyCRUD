{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{# {% block stylesheets %}
            {{ encore_entry_link_tags('approuting configuration') }}
<link rel="stylesheet" href="{{ path('css_files', {'file': 'Login.css'}) }}">
{% endblock %} #}

{% block body %}
<form method="post" >
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<img class="img_login" src="{{ path('images',{'file':'login.png'}) }}" alt="">    
    {% if app.user %}
        <div class="mb-3 already_L">
            You are logged in as {{ app.user.userIdentifier }}, 
            <a href="{{ path('app_logout') }}">Logout<i class="fas fa-trash"></i></a><br>
            Do u want to enter to Dashboard <a href="/dashboard">Dashboard <i class="fas fa-check"></i></a>
        </div>
    {% endif %}
    <div class="form-group">
    <h1 class="h3 mb-3 font-weight-normal text-center">Please sign in</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

        {# <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div> #}

    <button id="sign_in" class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
    <button id="register" class="btn btn-lg btn-primary" type="submit">
        <a href="/register" > Register
    </button>
    </div>
</form>

{% endblock %}